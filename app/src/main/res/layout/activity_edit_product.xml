<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".editProduct" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:text="QUẢN LÝ SẢN PHẨM"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tên sản phẩm" />

            <EditText
                android:id="@+id/txtTenSP_EditSP"
                android:layout_width="309dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục" />

            <Spinner
                android:id="@+id/spinnerDM_EditSP"
                android:layout_width="306dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng" />

            <EditText
                android:id="@+id/txtSoluong_ThemSP_EditSP"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cả" />

            <EditText
                android:id="@+id/txtGiaca_ThemSP_EditSP"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center" >

                <Button
                    android:id="@+id/ibnCamera_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chụp ảnh"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/radius_btn1"/>

                <Button
                    android:id="@+id/ibnFolder_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm ảnh"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/radius_btn1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgHinh_EditSP"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btnDelete_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_btn1"
                    android:text="Xóa"
                    android:layout_marginRight="10dp"
                    android:textColorLink="#000011"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnEdit_ThemSP_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/radius_btn1"
                    android:text="Sửa"
                    android:textColorLink="#000011"
                    android:textStyle="bold" />
            </LinearLayout>
</LinearLayout>