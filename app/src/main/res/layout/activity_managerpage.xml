<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".managerpage" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="CHỨC NĂNG CHÍNH"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/btnCall_Donhang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/radius_btn"
            android:layout_marginRight="10dp"
            android:text="Đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnCall_Mathang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/radius_btn"
            android:layout_marginLeft="10dp"
            android:text="Mặt hàng"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="240dp">

        <Button
            android:id="@+id/btnCall_Hoadon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/radius_btn"
            android:text="Hóa đơn"
            android:layout_marginRight="10dp"
            android:textColorLink="#000011"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnCall_CSKH"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radius_btn"
            android:padding="10dp"
            android:text="Thống kê kinh doanh"
            android:textColorLink="#000011"
            android:textSize="20sp"
            android:textStyle="bold" />-->
    </LinearLayout>
</RelativeLayout>

