<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".statistic" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnChonngay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chọn ngày"
            android:textColorLink="#000011"
            android:textStyle="bold"
            android:background="@drawable/radius_btn1" />
        <EditText
            android:id="@+id/txtNgay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>
    <Button
        android:id="@+id/btnthongke"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Thống kê"
        android:layout_marginTop="20dp"
        android:textColorLink="#000011"
        android:textStyle="bold"
        android:background="@drawable/radius_btn1" />

    <ListView
        android:id="@+id/lis_thongkesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnthongke"
        android:layout_below="@+id/btnthongke"
        android:layout_marginTop="44dp" >
    </ListView>
</LinearLayout>